<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('includes/head', { title: 'All Posts' }) %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
  <%- include('includes/header') %>
    <main class="container">
      <div class="p-4 mb-4 rounded text-bg-dark">
        <div class="col-md-12 px-0">
          <strong class="m-2 d-inline-block mb-2 text-primary">
            <%= featurePost.type %>
          </strong>

          <h1 class="display-2 fst-italic">
            <%= featurePost.title %>
          </h1>
          <div class="m-2 text-white">
            <%= featurePost.date %>
          </div>
          <img class="bd-placeholder-img" width="720" height="350" src="/uploads/<%=featurePost.imgPath%>" />

          <p class="lead mt-4">
            <%= featurePost.desc %>
          </p>
          <p class="lead mt-2"><a href="#" class="text-primary fw-bold">Continue reading..</a></p>

        </div>
      </div>
      <div class="row g-5">
        <div class="col-md-8">
          <div class="row mb-2">
            <% posts.forEach(function(post) { %>
              <%- include('includes/blog-item',{post:post}) %>
                <% }) %>
          </div>
        </div>
      </div>
    </main>

</body>

</html>